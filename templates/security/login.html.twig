{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="relative mx-auto mt-16 p-5 w-96 bg-sky-800">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 text-center  text-white text-2xl  mb-5 font-weight-normal">Please sign in</h1>
        <div class="mb-3 grid grid-cols-4 gap-2">
            <div>
                <label class="text-white mr-2" for="inputUsername">Username</label>
            </div>
            <div class="col-span-3">
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="w-full form-control" autocomplete="username" required autofocus>
            </div>
        </div>
        <div class="grid grid-cols-4 gap-2 mb-3">
            <div>
                <label for="inputPassword" class="text-white mr-2">Password</label>
            </div>
            <div class="col-span-3">
                <input type="password" name="password" id="inputPassword" class="w-full form-control" autocomplete="current-password" required>
            </div>
        </div>
        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        <div class="flex flex-row justify-end col-span-2 pr-5 mt-6">
            <button class="bg-gray-500 p-2 rounded-2xl text-white hover:bg-gray-400 ml-2" type="submit">
                Sign in
            </button>
        </div>
    </form>
</div
{% endblock %}
